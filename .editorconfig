# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
tab_width = 2
indent_size = 2
trim_trailing_whitespace = false

[Dockerfile]
indent_size = 2

[*.{md,xml,yml.dist,init,conf,yaml,neon,neon.dist,json,docker-compose.yml}]
indent_style = space
indent_size = 2
tab_width = 2

[Makefile]
indent_style = tab
